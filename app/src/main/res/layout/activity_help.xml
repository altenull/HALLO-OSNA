<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@id/help_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/osna_yellow"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5.0dip"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <ImageButton
            android:id="@id/help_logo"
            android:src="@drawable/help_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_marginLeft="50.0dip"
            android:layout_marginTop="6.0dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <ImageButton
            android:id="@id/help_symbol"
            android:src="@drawable/help_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_marginTop="6.0dip"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@id/help_text_1" />

        <TextView
            android:id="@id/help_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="12.0sp"
            android:lineSpacingMultiplier="1.3"
            android:layout_marginLeft="60.0dip"
            android:layout_marginTop="24.0dip"
            android:layout_marginRight="60.0dip"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/help_logo" />

        <TextView
            android:id="@id/help_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="10.0sp"
            android:text="Copyright © 2017 김헌영. All Rights Reserved.\nHALLO-OSNA 참여 문의 altenull@gmail.com\nDevelop 김헌영 altenull@gmail.com\nDesign 김다미 o0oall33@gmail.com"
            android:lineSpacingMultiplier="1.2"
            android:layout_marginLeft="60.0dip"
            android:layout_marginTop="20.0dip"
            android:layout_marginRight="60.0dip"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/help_text_1" />
    </RelativeLayout>

    <TextView
        android:id="@id/help_text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="14.0sp"
        android:textStyle="bold"
        android:text="Thanks to"
        android:layout_marginBottom="10.0dip"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/help_text_4"/>

    <TextView
        android:id="@id/help_text_4"
        android:layout_width="80.0dip"
        android:layout_height="wrap_content"
        android:scrollHorizontally="true"
        android:textColor="#FFFFFF"
        android:textSize="12.0sp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:layout_marginBottom="24.0dip"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>